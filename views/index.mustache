<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Stock For Beginner</title>
    <link rel="icon" type="image/x-icon" href="/resources/favicon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .img-cover{
            height: 35vh;
        }
    </style>
</head>

<body class="bg-light">
{{>header}}
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12 text-center">
                <img src="/resources/bg_cover" alt="Stock Pic" class="img-fluid img-cover">
            </div>
            <div class="col-lg-6 col-md-12 text-center text-md-start p-4">
                <h1 class="fs-1 fw-bold">Invest in the Future</h1>
                <h2 class="fs-4 text-muted">Current prices of the most trending US stocks</h2>
            </div>
        </div>
    </div>
    <div class="container mt-5">
        <div class="row">
            <!-- Trending Tickers Table -->
            <div class="col-lg-6 col-md-12 mb-4">
                <div class="card p-4 shadow-lg">
                    <h2 class="text-center">Trending Tickers</h2>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover text-center">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Symbol</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">High</th>
                                    <th scope="col">Low</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#stocks}}
                                <tr>
                                    <td>{{symbol}}</td>
                                    <td>${{price}}</td>
                                    <td>${{high}}</td>
                                    <td>${{low}}</td>
                                </tr>
                                {{/stocks}}
                            </tbody>
                        </table>
                        {{^stocks}}
                        <div class="alert alert-warning text-center mt-3">No trending stocks available.</div>
                        {{/stocks}}
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="card p-4 shadow-lg">
                    <h2 class="text-center">ETFs</h2>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Symbol</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">High</th>
                                    <th scope="col">Low</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#etfs}}
                                <tr>
                                    <td>{{symbol}}</td>
                                    <td>${{price}}</td>
                                    <td>${{high}}</td>
                                    <td>${{low}}</td>
                                </tr>
                                {{/etfs}}
                            </tbody>
                        </table>
                        {{^etfs}}
                        <div class="alert alert-warning text-center mt-3">No ETF data available.</div>
                        {{/etfs}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{{> footer }}
</body>
</html>