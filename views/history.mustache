<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Stock For Beginner</title>
    <link rel="icon" type="image/x-icon" href="/resources/favicon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .img-cover {
            height: 35vh;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
</head>
{{> header }}
<body>
    <div class="container-fluid mt-md-5 pt-md-5">
        <div class="d-flex justify-content-center ">
            <h1 class="fs-1">Trading History</h1>
        </div>
    </div>
    <div class="container-fluid text-center mt-5">
        <div class="row">
            <div class="col">
                <div class="card p-4 shadow">
                    <table class="table">
                        <thead>
                            <th scope="col">ID</th>
                            <th scope="col">Symbol</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">One Share</th>
                            <th scope="col">Total Price</th>
                            <th scope="col">Date of Last Purchase</th>
                            <th scope="col"></th>
                        </thead>
                        <tbody>
                                {{#transactions}}
                                <tr>
                                    <td>{{rowid}}</td>
                                    <td>{{symbol}}</td>
                                    <td>{{qty}}</td>
                                    <td>{{one_price}}</td>
                                    <td>{{total_price}}</td>
                                    <td>{{last_date}}</td>
                                </tr>
                                {{/transactions}}
                        </tbody>
                        {{^transactions}}
                        <div class="alert alert-primary my-2">You don't have anything to show</div>
                        {{/transactions}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
{{> footer }}
</html>
